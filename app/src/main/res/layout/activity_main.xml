<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <View
       android:id="@+id/viewLogo"
       android:layout_width="300dp"
       android:layout_height="80dp"
       android:background="@color/purple_700"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintVertical_bias="0.15"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <EditText
       android:id="@+id/usuarioEditText"
       android:layout_width="0dp"
       android:layout_marginStart="16dp"
       android:layout_marginEnd="16dp"
       android:layout_height="wrap_content"
       android:hint="Escribe tu Nombre"
       app:layout_constraintVertical_bias="0.25"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/viewLogo"
       app:layout_constraintBottom_toBottomOf="parent"/>

   <EditText
       android:id="@+id/contrasenaEditText"
       android:layout_width="0dp"
       android:layout_marginStart="16dp"
       android:layout_marginEnd="16dp"
       android:layout_height="wrap_content"
       app:layout_constraintVertical_bias="0.05"
       android:hint="Escribe la constraseÃ±a"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/usuarioEditText" />

   <Button
       android:id="@+id/loginButtom"
       android:layout_width="0dp"
       android:layout_marginStart="16dp"
       android:layout_marginEnd="16dp"
       android:layout_height="wrap_content"
       android:text="Login"
       app:layout_constraintTop_toBottomOf="@+id/contrasenaEditText"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintVertical_bias="0.96"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       />

</androidx.constraintlayout.widget.ConstraintLayout>